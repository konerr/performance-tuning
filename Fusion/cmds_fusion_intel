module load intel

ifort -xHost        -o fused_loops_df fused_loops.f
ifort -xHost -O0    -o fused_loops_O0 fused_loops.f
ifort -xHost -O1    -o fused_loops_O1 fused_loops.f
ifort -xHost -O2    -o fused_loops_O2 fused_loops.f
ifort -xHost -O3    -o fused_loops_O3 fused_loops.f

ifort -xHost        -o unfused_loops_df unfused_loops.f
ifort -xHost -O0    -o unfused_loops_O0 unfused_loops.f
ifort -xHost -O1    -o unfused_loops_O1 unfused_loops.f
ifort -xHost -O2    -o unfused_loops_O2 unfused_loops.f
ifort -xHost -O3    -o unfused_loops_O3 unfused_loops.f

echo 'FUSED'

./fused_loops_df 30000
./fused_loops_O0 30000
./fused_loops_O1 30000
./fused_loops_O2 30000
./fused_loops_O3 30000

echo 'UNFUSED'

./unfused_loops_df 30000
./unfused_loops_O0 30000
./unfused_loops_O1 30000
./unfused_loops_O2 30000
./unfused_loops_O3 30000

